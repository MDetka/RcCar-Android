<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ConnectedMenu">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="640dp"
        android:layout_height="360dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/design_default_color_primary_dark"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/StatusBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tbTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">

            <TableRow
                android:id="@+id/trRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center">

                <Button
                    android:id="@+id/btDisconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:onClick="OnClickDisconnect"
                    android:text="Rozłącz"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/trRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center">

                <Button
                    android:id="@+id/btDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:onClick="OnClickDrive"
                    android:text="Kieruj"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/trRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center">

                <Button
                    android:id="@+id/btSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:onClick="OnClickSettings"
                    android:text="Opcje"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:id="@+id/trRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center">

                <Button
                    android:id="@+id/btQuit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:onClick="OnClickQuit"
                    android:text="Zamknij"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>